import "library.svgt"

def heart(width)
{
  radius = (width/4)
  bottom = (width * .7)

  d -70
  a radius 170

  x = turtle.x
  y = turtle.y

  Q 0 bottom 150

  r 60

  # right hand point mirrored to left side
  Q -x y -100 

  a radius 170
  z
}

def throw_heart(angle distance size)
{
  push
    d angle
    up f distance down
    r 90

    # using stomp is overkill, but proves that it works
    stomp size { heart 1 }
  pop
}

M 250 250
for angle = 0..15..359.9
  throw_heart angle 150 (5 + angle/7)

